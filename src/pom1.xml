                    <groupId>org.xmlunit</groupId>
                    <artifactId>xmlunit-core</artifactId>
                    <version>2.6.2</version>
                    <scope>compile</scope>
                </dependency>
                <dependency>
                    <groupId>org.apache.poi</groupId>
                    <artifactId>poi-ooxml</artifactId>
                    <version>5.0.0</version>
                </dependency>
            </dependencies>
            <build>
                <finalName>NTASWeb test framework</finalName>
                <plugins>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <version>3.1</version>
                        <extensions>true</extensions>
                        <configuration>
                            <compilerId>groovy-eclipse-compiler</compilerId>
                            <verbose>true</verbose>
                            <source>1.8</source>
                            <target>1.8</target>
                            <maxmem>256M</maxmem>
                            <fork>${compiler.fork}</fork>
                        </configuration>
                        <dependencies>
                            <dependency>
                                <groupId>org.codehaus.groovy</groupId>
                                <artifactId>groovy-eclipse-compiler</artifactId>
                                <version>${groovy.compiler.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>org.codehaus.groovy</groupId>
                                <artifactId>groovy-eclipse-batch</artifactId>
                                <version>${groovy.eclipse.batch-version}</version>
                            </dependency>

                        </dependencies>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>${maven-surefire.version}</version>
                        <configuration>
                            <parallel>classes</parallel>
                            <forkCount>${surefire.forkCount}</forkCount>
                            <threadCount>${surefire.threadCount}</threadCount>
                            <reuseForks>${surefire.reuseForks}</reuseForks>
                            <failIfNoTests>false</failIfNoTests>
                            <systemPropertyVariables>
                                <!--<geb.build.baseUrl>${geb.test.baseUrl}</geb.build.baseUrl> -->
                                <geb.build.reportsDir>target/test-reports/geb</geb.build.reportsDir>
                                <geb.env>firefox</geb.env>
                                <geb.firefoxBinary></geb.firefoxBinary>
                                <geb.chromeBinary></geb.chromeBinary>
                                <geb.os.name>win</geb.os.name>
                                <geb.defaultTimeout>120</geb.defaultTimeout>
                                <xvfb.screen>${xvfb.screen}</xvfb.screen>
                            </systemPropertyVariables>
                            <includes>
                                <include>${geb.test.include}</include>
                            </includes>
                            <excludes>
                                <exclude>${geb.test.exclude}</exclude>
                            </excludes>
                            <argLine>-Xmx1024m -XX:MaxPermSize=256m</argLine>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

